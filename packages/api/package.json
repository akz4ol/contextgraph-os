{
  "name": "@contextgraph/api",
  "version": "0.1.0",
  "description": "REST API server for ContextGraph OS",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "contextgraph-api": "dist/bin.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "vitest run",
    "start": "node dist/bin.js",
